#!/bin/bash

set -e
echo "üõ†Ô∏è  Setting up MMX Remux v2"

PROJECT_DIR="$HOME/mmx"
CORE="$PROJECT_DIR/mmx-core"
CLI="$PROJECT_DIR/mmx-cli"

mkdir -p "$PROJECT_DIR"

# Init mmx-core if missing
if [ ! -d "$CORE" ]; then
  cargo new --lib "$CORE"
fi

# Init mmx-cli if missing
if [ ! -d "$CLI" ]; then
  cargo new --bin "$CLI"
fi

# Add Symphonia dependencies to both
for PKG in "$CORE" "$CLI"; do
  cargo add symphonia --package symphonia --features="mp4,mkv" --manifest-path "$PKG/Cargo.toml"
done

# Add binary section to mmx-cli
if ! grep -q 'name = "mmx-remux"' "$CLI/Cargo.toml"; then
cat <<EOF >> "$CLI/Cargo.toml"

[[bin]]
name = "mmx-remux"
path = "src/bin/mmx-remux.rs"
EOF
fi

mkdir -p "$CLI/src/bin"
cat <<EOF > "$CLI/src/bin/mmx-remux.rs"
// (Paste the Rust code from above here)
EOF

echo "‚úÖ Done! Now run: cd $CLI && cargo run --bin mmx-remux -- input.mp4 output.mkv"
